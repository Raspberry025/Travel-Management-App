<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.app.controller.BookingController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing ="15" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <TableView fx:id="bookingTable" prefHeight="200" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="touristColumn" text="Tourist"/>
                <TableColumn fx:id="guideColumn" text="Guide"/>
                <TableColumn fx:id="attractionColumn" text="Attraction"/>
                <TableColumn fx:id="dateColumn" text="Date"/>
                <TableColumn fx:id="statusColumn" text="Status"/>
                <TableColumn fx:id="priceColumn" text = "Price"/>
                <TableColumn fx:id="emergencyReportCol" text="Emergency Report" />
            </columns>
        </TableView>

        <HBox spacing="10">
            <Button text="Report Emergency" onAction="#handleEmergency" prefWidth="150"/>
        </HBox>


        <HBox spacing="10">
            <ComboBox fx:id="touristCombo" promptText="Tourist" prefWidth="180"/>
            <ComboBox fx:id="guideCombo" promptText="Guide" prefWidth="180"/>
            <ComboBox fx:id="attractionCombo" promptText="Attraction" prefWidth="180"/>
        </HBox>

        <HBox spacing="10">
            <DatePicker fx:id="datePicker" prefWidth="280"/>
            <TextField fx:id="statusField" promptText="Status" prefWidth="260"/>
        </HBox>

        <HBox spacing="10">
            <Button text="Add" onAction="#handleAdd" prefWidth="100"/>
        </HBox>
    </VBox>


</AnchorPane>
