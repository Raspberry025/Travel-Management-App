<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.app.controller.GuideController"
            prefWidth="600.0">
    <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.leftAnchor="10">
        <TableView fx:id="guideTable" prefHeight="250" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                <TableColumn fx:id="languagesColumn" text="Languages" prefWidth="150"/>
                <TableColumn fx:id="experienceColumn" text="Experience (Years)" prefWidth="150"/>
                <TableColumn fx:id="contactColumn" text="Contact" prefWidth="150"/>
            </columns>
        </TableView>

        <HBox spacing="10">
            <TextField fx:id="nameField" promptText="Name" prefWidth="280"/>
            <TextField fx:id="languagesField" promptText="Languages (comma separated)" prefWidth="280"/>
        </HBox>

        <HBox spacing="10">
            <TextField fx:id="contactField" promptText="Contact" prefWidth="280"/>
            <Spinner fx:id="experienceSpinner" prefWidth="280"/>
        </HBox>

        <HBox spacing="10">
            <Button text="Add" onAction="#handleAdd" prefWidth="80"/>
            <Button text="Update" onAction="#handleUpdate" prefWidth="80"/>
            <Button text="Delete" onAction="#handleDelete" prefWidth="80"/>
        </HBox>
    </VBox>
</AnchorPane>
