<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.app.controller.AttractionController"
            prefHeight="500.0" prefWidth="700.0">
    <VBox spacing="15">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>
        <TableView fx:id="attractionTable" prefHeight="300.0">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="150"/>
                <TableColumn fx:id="locationColumn" text="Location" prefWidth="200"/>
                <TableColumn fx:id="altitudeColumn" text="Altitude (m)" prefWidth="150"/>
            </columns>
        </TableView>

        <!-- Booking controls -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Date:"/>
            <DatePicker fx:id="datePicker"/>
            <Button fx:id="bookButton" text="Book" onAction="#handleBook"/>
            <Button fx:id="cancelButton" text="Cancel Booking" onAction="#handleCancel"/>
            <Label fx:id="statusLabel" text="Your bookings for this attraction: 0"/>
        </HBox>

        <HBox spacing="10">
            <TextField fx:id="nameField" promptText="Name" prefWidth="200"/>
            <TextField fx:id="typeField" promptText="Type (Trek/Heritage)" prefWidth="200"/>
        </HBox>

        <HBox spacing="10">
            <TextField fx:id="locationField" promptText="Location" prefWidth="200"/>
            <TextField fx:id="altitudeField" promptText="Enter altitude"  prefWidth="200"/>
        </HBox>

        <HBox spacing="10">
            <Button text="Add" onAction="#handleAdd"/>
            <Button text="Delete" onAction="#handleDelete"/>
        </HBox>
    </VBox>
</AnchorPane>
