<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<GridPane hgap="10" vgap="10" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.app.controller.LoginController" fx:id="rootPane" stylesheets="/styles/nepali-theme.css">
    <styleClass>
        <FXCollections fx:factory="observableArrayList">
            <String fx:value="login-root"/>
        </FXCollections>
    </styleClass>
    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="Login" onAction="#handleLogin" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button text="Sign Up" onAction="#openSignupPage"
            GridPane.rowIndex="3" GridPane.columnIndex="1"
            maxWidth="250"
            style="-fx-background-color: transparent; -fx-text-fill: blue;" />

</GridPane>
